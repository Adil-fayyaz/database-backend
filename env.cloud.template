# CONFIGURAZIONE PER CLOUD (Railway, Render, Fly.io, etc)
NODE_ENV=production
PORT=3000
SERVER_HOST=0.0.0.0
SERVER_NAME=Cloud Server

# Railway auto-fornisce PORT, usa quello se disponibile
# PUBLIC_URL verr√† auto-rilevato da Railway/Render
PUBLIC_URL=https://tuoapp.up.railway.app

# IMPORTANTE: Configura questo nelle variabili d'ambiente del cloud provider!
JWT_SECRET=CHANGE_THIS_SECRET

# CORS per cloud
CORS_ORIGINS=https://tuoapp.up.railway.app,https://www.tuoapp.com

# Database (Railway fornisce storage persistente)
DB_PATH=./data/database.db
DB_AUTO_BACKUP=true

# File upload
MAX_FILE_SIZE=104857600
UPLOAD_DIR=./uploads

# Security produzione
HELMET_ENABLED=true
FORCE_HTTPS=true
BCRYPT_ROUNDS=12

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info



