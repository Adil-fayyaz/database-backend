# CONFIGURAZIONE PER SERVER LOCALE (PC di casa)
NODE_ENV=development
PORT=3000
SERVER_HOST=0.0.0.0
SERVER_NAME=Local Dev Server
PUBLIC_URL=http://192.168.1.2:3000

# Genera con: node scripts/generate-secret.js
JWT_SECRET=CHANGE_THIS_SECRET

# CORS per rete locale
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://192.168.1.2:3000
LOCAL_IP_PATTERN=^http://192\\.168\\.

# Database locale
DB_PATH=./data/database.db
DB_AUTO_BACKUP=true

# File upload
MAX_FILE_SIZE=104857600
UPLOAD_DIR=./uploads

# Features tutte attive
FEATURE_GROUPS=true
FEATURE_STATUS=true
FEATURE_CALLS=true
FEATURE_FILE_UPLOAD=true



