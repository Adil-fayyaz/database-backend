# CONFIGURAZIONE PER RASPBERRY PI (server casa sempre attivo)
NODE_ENV=production
PORT=3000
SERVER_HOST=0.0.0.0
SERVER_NAME=Raspberry Pi Server
PUBLIC_URL=https://tuoserver.duckdns.org

# IMPORTANTE: Cambia questo!
JWT_SECRET=CHANGE_THIS_SECRET

# CORS con DuckDNS
CORS_ORIGINS=https://tuoserver.duckdns.org
LOCAL_IP_PATTERN=^http://192\\.168\\.

# Database su Raspberry Pi
DB_PATH=/home/pi/messaging-server/data/database.db
DB_AUTO_BACKUP=true
DB_CACHE_SIZE=32000

# File upload (limiti pi√π bassi per Raspberry)
MAX_FILE_SIZE=52428800
UPLOAD_DIR=/home/pi/messaging-server/uploads

# Socket.IO ottimizzato per Raspberry
SOCKET_PING_TIMEOUT=90000
SOCKET_PING_INTERVAL=30000

# Security
HELMET_ENABLED=true
FORCE_HTTPS=true
BCRYPT_ROUNDS=10

# Features
FEATURE_GROUPS=true
FEATURE_STATUS=true
FEATURE_CALLS=true
FEATURE_FILE_UPLOAD=true



